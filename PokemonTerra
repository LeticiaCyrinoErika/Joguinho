public class PokemonTerra extends Pokemon {
	private int totalHp ;
	private String tipo;
	private boolean ehEvolucao;
	private int hp;
	
	public PokemonTerra (String tipo, int hp, boolean evolucao){
	}

	
	public int calcularDano(String tipoAdversario) {
		if(tipoAdversario == "fogo"){
			totHp= (int) ( 12*0.5);
		}
		if (tipoAdversario == "eletrico"){
			totHp= (int) (10*0.2);
		}
		return totHp;
	}


	
	public String getTipo() {
		return tipo;
	}
	public int calcularDanoExtra(){
		if (ehEvolucao==true){
			totalHp=(int) (0.03);
			return hp*totaltHp;
		}
		
	
}
}
